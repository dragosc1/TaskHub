@{
    ViewBag.Title = "Show";
}

<h2>Afisare Task</h2>
<br />
<p>@ViewBag.Task.Titlu</p>
<br />
<p>Descriere: @ViewBag.Task.Descriere</p>
<p>Status: @ViewBag.Task.Status</p> <a href="/Tasks/EditStatus/@ViewBag.Task.Id">Schimba statusul</a>
<p>Data inceput: @ViewBag.Task.DataStart</p>
<p>Data final: @ViewBag.Task.DataFinalizare</p>
<a href="@ViewBag.Task.ContinutMedia" target="_blank">Afiseaza Continut Media</a>
<br />

<a href="@Url.Action("Edit", "Tasks", new { idTask = ViewBag.Id })">Editare task</a>
<br />
<form method="post" action="/Tasks/Delete/@ViewBag.Task.Id">
    <button type="submit">Stergere Task</button>
</form>
<hr />
<h2>Membrii:</h2>
<ul>
    @if (ViewBag.Membrii != null)
        @foreach (var membru in ViewBag.Membrii)
        {
            <li style="list-style: none">@membru</li>
            <form method="post" action="/Tasks/DeleteMember/@membru/@ViewBag.Task.Id">
                <button type="submit">Sterge membru</button>
            </form>
        }
    else {
        <p>nu s-au gasit membrii!</p>
    }
</ul>
<h4>Adauga membrii la task</h4>
<a href="/Tasks/AddMember/@ViewBag.Task.Id">Adauga membru la task</a>
<hr />
<h2>Comentarii</h2>
<ul>
    @if (ViewBag.Comentarii != null)
        @foreach (var comentariu in ViewBag.Comentarii)
        {
            <li style="list-style: none">@comentariu.Continut</li>
            <form method="post" action=@Url.Action("DeleteComentariu", "Tasks", new { content = comentariu.Continut, idTask = ViewBag.Task.Id })>
                <button type="submit">Sterge comentariu</button>
            </form>
            <a href="@Url.Action("EditComentariu", "Tasks", new { idTask = ViewBag.Task.Id, idComentariu = comentariu.Id})">Editeaza comentariu</a>
        }
    else
    {
        <p>nu s-au gasit comentarii!</p>
    }
</ul>
<h4>Adauga comentarii la task</h3>
<a href="@Url.Action("AddComentariu", "Tasks", new { idTask = ViewBag.Task.Id })">Adauga comentariu la task</a>
