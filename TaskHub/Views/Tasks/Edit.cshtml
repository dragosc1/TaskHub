@model TaskHub.Models.Task
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

<h2> Formular editare task</h2>
@using (Html.BeginForm(actionName: "Edit", controllerName: "Tasks"))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <hr />

    @Html.Label("Titlu", "Titlul Taskului")
    <br />
    @Html.TextBox("Titlu", Model.Titlu, new { @class = "form-control"})
    @Html.ValidationMessage("Titlu", null, new {@class = "text-danger"})
    <br />
    <br />

    @Html.Label("Descriere", "Descrierea Taskului")
    <br />
    @Html.TextArea("Desciere", Model.Descriere, new { @class = "form-control" })
    @Html.ValidationMessage("Descriere", null, new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("Status", "Statusul Taskului")
    <br />
    @Html.TextBox("Status", Model.Status, new { @class = "form-control" })
    @Html.ValidationMessage("Status", null, new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("DataStart", "Statusul Taskului")
    <br />
    @Html.TextBox("DataStart", Model.DataStart, new { @class = "form-control", type = "date" })
    @Html.ValidationMessage("DataStart", null, new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("DataFinalizare", "Statusul Taskului")
    <br />
    @Html.TextBox("DataFinalizare", Model.DataFinalizare, new { @class = "form-control", type = "date" })
    @Html.ValidationMessage("DataFinalizare", null, new { @class = "text-danger" })
    <br />
    <br />

    <button class="btn btn-success" type="submit">Modifica Taskul</button>
}
