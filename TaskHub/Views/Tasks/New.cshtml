@{
    int ProiectId = ViewBag.Id;
    var statusOptions = ViewBag.AvailableStatusOptions as IEnumerable<SelectListItem>;
}
<h2> Formular adaugare task</h2>
@using (Html.BeginForm(actionName: "New", controllerName: "Tasks", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <hr/>
    @Html.Hidden("ProiectId", ProiectId)

    @Html.Label("Titlu", "Titlul Taskului")
    <br />
    @Html.TextBox("Titlu", null, new { @class = "form-control"})
    @Html.ValidationMessage("Titlu", null, new {@class = "text-danger" })
    <br /><br />

    @Html.Label("Descriere", "Descrierea Taskului")
    <br />
    @Html.TextArea("Descriere", null, new { @class = "form-control" })
    @Html.ValidationMessage("Descriere", null, new { @class = "text-danger" })
    <br /><br />

    @Html.Label("Status", "Statusul Taskului")
    <br />
    @Html.DropDownList("Status", statusOptions, new { @class = "form-control" })
    @Html.ValidationMessage("Status", null, new { @class = "text-danger" })
    <br /><br />

    @Html.Label("DataStart", "Statusul Taskului")
    <br />
    @Html.TextBox("DataStart", null, new { @class = "form-control", type = "date" })
    @Html.ValidationMessage("DataStart", null, new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("DataFinalizare", "Statusul Taskului")
    <br />
    @Html.TextBox("DataFinalizare", null, new { @class = "form-control", type = "date" })
    @Html.ValidationMessage("DataFinalizare", null, new { @class = "text-danger" })
    <br />
    <input class="form-control" type="file" name="TaskContent">
    <br />
    <br />

    <button class="btn btn-success" type="submit">Adauga Taskul</button>
}
