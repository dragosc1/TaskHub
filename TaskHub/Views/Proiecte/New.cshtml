@*
*@
@{
}

<h2>Formular adaugare Proiect</h2>
@using (Html.BeginForm(actionName: "New", controllerName: "Proiecte"))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <hr />

    @Html.Label("NumeProiect", "Numele Proiectului")
    <br />
    @Html.TextBox("NumeProiect", null, new { @class = "form-control"})
    @Html.ValidationMessage("NumeProiect", null, new { @class = "text-danger"})
    <br />
    <br />

    @Html.Label("Descriere", "Descrierea Proiectului")
    <br />
    @Html.TextArea("Descriere", null, new { @class = "form-control" })
    @Html.ValidationMessage("Descriere", null, new { @class = "text-danger" })
    <br />
    <br />

    <button class="btn btn-success" type="submit">Adauga Proiectul</button>
}